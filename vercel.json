{
  "version": 2,
  "builds": [
    {
      "src": "backend/Server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/jump", "dest": "/backend/Server.js" }, 
    { "src": "/api/(.*)", "dest": "/backend/Server.js" },
    { "src": "/(.*)", "dest": "/frontend/index.html" },
    { "src": "/frontend/sounds/(.*)", "dest": "/frontend/sounds/$1" }
  ]
}