{
  "version": 2,
  "builds": [
    {
      "src": "backend/Server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/jump", "dest": "/backend/Server.js" },
    { "src": "/api/(.*)", "dest": "/backend/Server.js" },
    
    { 
      "src": "/sounds/(.*)",
      "dest": "/frontend/sounds/$1" 
    },
    
    { "src": "/(.*)", "dest": "/frontend/index.html" }
  ],
  "headers": [
    {
      "source": "/sounds/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "audio/mpeg"
        }
      ]
    }
  ]
}